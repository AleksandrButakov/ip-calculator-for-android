<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constaintLayoutResults"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ActivityLayoutResults"
    android:orientation="horizontal"
    tools:context=".ResultsActivity">

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:ellipsize="none"
        android:gravity="center"
        android:text="Log of calculation results:"
        android:theme="@style/ActivityLayoutResults"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewResults"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:foregroundTint="#FFFFFF"
        android:hapticFeedbackEnabled="false"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:text="Attention!\nThe results of calculations are not saved after the application is closed.\n"
        android:textAlignment="viewStart"
        android:theme="@style/ActivityLayoutResults"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

</androidx.constraintlayout.widget.ConstraintLayout>